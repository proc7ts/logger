{
  "name": "@proc7ts/logger",
  "version": "2.0.0-pre.0",
  "description": "Logging API for Node.js and browsers",
  "keywords": [
    "log",
    "loggable",
    "logger",
    "logging"
  ],
  "homepage": "https://github.com/proc7ts/logger",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:proc7ts/logger.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/proc7ts/logger/issues"
  },
  "type": "module",
  "types": "./dist/logger.d.ts",
  "exports": {
    "types": "./dist/logger.d.ts",
    "default": "./dist/logger.js"
  },
  "dependencies": {
    "@proc7ts/context-values": "^7.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.4.3",
    "@proc7ts/context-builder": "^7.0.1",
    "@run-z/eslint-config": "^3.3.1",
    "@run-z/project-config": "^0.15.1",
    "@swc/core": "^1.3.35",
    "@swc/jest": "^0.2.24",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-plugin-jest": "^27.2.1",
    "gh-pages": "^5.0.0",
    "jest": "^29.4.3",
    "jest-junit": "^15.0.0",
    "jest-mock": "^29.4.3",
    "prettier": "^2.8.4",
    "prettier-eslint-cli": "^7.1.0",
    "rollup": "^3.17.2",
    "run-z": "1.11.0-bootstrap",
    "ts-jest": "^29.0.5",
    "tslib": "^2.5.0",
    "typedoc": "^0.23.25",
    "typescript": "~4.9.5"
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "bootstrap": "build-z",
    "build": "run-z +z bootstrap",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then clean-z",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "format": "run-z +z --then prettier-eslint --write --include-dot-files \"src/**/*.*\" \"*.{js,cjs,json,md}\"",
    "lint": "run-z +z --then eslint .",
    "test": "run-z +z env:NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" --then test-z",
    "z": "run-z +cmd:build-z,+cmd:typedoc,+cmd:eslint,+cmd:test-z"
  }
}
